{
  "manifest_version": 2,
  "name": "Simple WebRing",
  "version": "0.9",
  "author": "Sam Foster",
  "description": "A simple webring browser extension.",

  "icons": {
    "16": "/assets/icon.svg",
    "32": "/assets/icon.svg",
    "48": "/assets/icon.svg",
    "64": "/assets/icon.svg",
    "128": "/assets/icon.svg",
    "256": "/assets/icon.svg"
  },

  "browser_action": {
    "default_icon": {
      "16": "/assets/icon.svg",
      "32": "/assets/icon.svg",
      "48": "/assets/icon.svg",
      "64": "/assets/icon.svg",
      "128": "/assets/icon.svg",
      "256": "/assets/icon.svg"
    },
    "default_title": "WebRing",
    "default_popup": "/ui/panel.html"
  },

  "background": {
    "scripts": ["/background.js", "/config.js", "/collections.js"]
  },

  "permissions": ["tabs"]
}
